{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "baseUrl" : "src",
  "paths": {
    "@components": ["components"],
    "@layouts": ["layouts"],
    "@lib": ["lib"],
    "@pages": ["pages"],
    "@store": ["store"],
    "@utils": ["utils"],
  },
  "include": ["next-env.d.ts", "next-auth.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts",
    "**/*.cy.ts"
  ]
}
